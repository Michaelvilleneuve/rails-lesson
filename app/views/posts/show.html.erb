<section style="background-image: url('<%= @post.image.url(:medium) %>'" class="flex-center article-title">
	<h1><%= @post.title %></h1>
</section>

<%= link_to "Auteur : #{@post.user}", @post.user %>
<p> Date de publication : <%= @post.created_at.strftime('Le %y/%m/%d') %> </p>
<%= link_to "Modifier cet article", edit_post_path(@post.id) if session[:user_id] && @post.written_by?(User.find(session[:user_id])) %>
<hr>
<p>
  <%= @post.content %>
</p>
<hr />
<h4>Les commentaires</h4>
<ul class="list-group" id="comment-list">
  <%= render partial: @post.comments %>
</ul>
<hr>
<% if session[:user_id] %>
	<h4>Rajouter un commentaire</h4>
	<%= form_for [@post, Comment.new], remote: true do |f| %>
		<%= f.text_area :title, class: 'form-control', placeholder: 'Contenu' %>
		<br>
	    <button class="btn btn-info" type="submit">CrÃ©er le commentaire</button>
	<% end %>
<% end %>